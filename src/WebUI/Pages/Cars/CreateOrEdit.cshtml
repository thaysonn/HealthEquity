@page
@model WebUI.Pages.Cars.CreateOrEditModel
@{
}

<form method="post">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Car.Make" class="control-label"></label>
            <input asp-for="Car.Make" class="form-control" />
            <span asp-validation-for="Car.Make" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Car.Model" class="control-label"></label>
            <input asp-for="Car.Model" class="form-control" />
            <span asp-validation-for="Car.Model" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Car.Year" class="control-label"></label>
            <input asp-for="Car.Year" class="form-control" />
            <span asp-validation-for="Car.Year" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Car.Doors" class="control-label"></label>
            <input asp-for="Car.Doors" class="form-control" />
            <span asp-validation-for="Car.Doors" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Car.Color" class="control-label"></label>
            <input asp-for="Car.Color" class="form-control" />
            <span asp-validation-for="Car.Color" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Car.Price" class="control-label"></label>
            <input asp-for="Car.Price" class="form-control" />
            <span asp-validation-for="Car.Price" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="Car.Id" />
    </div> 
    <div class="row">
        <div>
            <button class="btn btn-primary" type="submit">
                <span class="glyphicon 	glyphicon glyphicon-floppy-disk"></span>
                Save
            </button>
            <a class="btn btn-default" asp-page="./Index">
                <span class="glyphicon glyphicon-repeat"></span>
                Back
            </a>
        </div>
    </div> 
</form> 